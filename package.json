{
	"name": "babel-plugin-template-html-minifier",
	"description": "Minify HTML in tagged template strings using html-minifier",
	"version": "2.2.0",
	"main": "index.js",
	"files": [
		"*.js"
	],
	"scripts": {
		"test": "xo && nyc ava -v"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/cfware/babel-plugin-template-html-minifier.git"
	},
	"keywords": [
		"babel",
		"lit-html",
		"choo",
		"html-minifier"
	],
	"author": "Corey Farrell",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/cfware/babel-plugin-template-html-minifier/issues"
	},
	"homepage": "https://github.com/cfware/babel-plugin-template-html-minifier#readme",
	"dependencies": {
		"html-minifier": "^3.5.21",
		"is-builtin-module": "^3.0.0"
	},
	"devDependencies": {
		"@babel/core": "^7.2.2",
		"@babel/plugin-transform-template-literals": "^7.2.0",
		"ava": "^1.1.0",
		"choo": "^6.13.1",
		"hyperhtml-element": "^3.5.0",
		"lit-element": "^2.0.0-rc.2",
		"lit-html": "^1.0.0-rc.2",
		"nyc": "^13.1.0",
		"pify": "^4.0.1",
		"xo": "^0.24.0"
	},
	"xo": {
		"ignores": [
			"test/fixtures/ignore-invalid-require-source.js",
			"test/fixtures/transform-template-literals-after.js"
		],
		"overrides": [
			{
				"files": [
					"test/fixtures/**"
				],
				"envs": [
					"browser",
					"es6"
				],
				"rules": {
					"no-unused-expressions": [
						"error",
						{
							"allowTaggedTemplates": true
						}
					]
				}
			}
		]
	}
}
